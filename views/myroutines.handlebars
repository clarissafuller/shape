<section class="container bg-dark border border-tertiary-subtle rounded-3">
  <div class="text-light">
    <h1>My Routines</h1>
  </div>
  <br>
  <section class="flex-row justify-center">
    
    {{#each routines as |routine|}}
        <div class="routine-container">
        <h3 class="text-light">{{routine.id}}. {{routine.name}}</h3>
        
        {{#each routine.exercises as |exercise|}}
          {{> myroutine-details}}
        {{/each}}

        <a data-id="{{routine.id}}" class="btn btn-danger delete-routine-button">Delete routine</a>
        <hr />

      </div>
    {{/each}}

  </section>
</section>
